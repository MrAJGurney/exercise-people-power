{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["ES2020"],
      "target": "ES2019",
      "rootDirs": ["src"],
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
    }
  }